<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft= "16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#D8F8F8"
    android:paddingBottom="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/linerlayout"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/teampush"
            android:layout_gravity="center"
            android:contentDescription="@string/logodisc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="The alpha version of"
            android:id="@+id/registerText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textColor="#009D91"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/teampush"
            android:textSize="40sp"
            android:textColor="#009D91"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="was created by"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"
            android:textColor="#009D91"
            android:clickable="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Frank Martin"
            android:textSize="30sp"
            android:textColor="#009D91"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="kaonkit"
            android:textSize="30sp"
            android:textColor="#009D91"
            android:id="@+id/textView4"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="kostakoida"
            android:textSize="30sp"
            android:textColor="#009D91"
            android:id="@+id/textView5"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Anti-Dalai-Lama"
            android:textSize="30sp"
            android:textColor="#009D91"
            android:id="@+id/textView6"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


</LinearLayout>
