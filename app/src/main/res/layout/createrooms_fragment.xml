<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft= "16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#009D91"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    android:id="@+id/createroom">

    <EditText
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:inputType="textEmailAddress|text"
        android:ems="10"
        android:background="#D8F8F8"
        android:id="@+id/loginEditText"
        android:autoText="false"
        android:clickable="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:hint="Name"
        android:textColor="#00665E"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:inputType="textEmailAddress|text"
        android:ems="10"
        android:background="#D8F8F8"
        android:id="@+id/loginEditText1"
        android:autoText="false"
        android:clickable="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="0dp"
        android:textSize="20sp"
        android:hint="Password"
        android:textColor="#00665E"
        android:layout_gravity="center_horizontal" />

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="213dp"
            android:layout_height="30dp"
            android:inputType="textEmailAddress|text"
            android:ems="10"
            android:background="#D8F8F8"
            android:id="@+id/loginEditText2"
            android:autoText="false"
            android:clickable="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="0dp"
            android:textSize="20sp"
            android:hint="Add mate"
            android:textColor="#00665E" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/imageView2"
            android:layout_gravity="right"
            android:src="@drawable/plus"
            android:layout_marginTop="3dp" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="kaonkit"
        android:id="@+id/registerText"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textColor="#D8F8F8"
        android:clickable="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="kostakoida"
        android:id="@+id/textView12"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textColor="#D8F8F8"
        android:clickable="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Frank Martin"
        android:id="@+id/textView13"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textColor="#D8F8F8"
        android:clickable="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Anti-Dalia-Lama"
        android:id="@+id/textView14"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textColor="#D8F8F8"
        android:clickable="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Create"
        android:id="@+id/loginButton"
        android:layout_gravity="center_horizontal"
        android:background="#FF9340"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:clickable="true"
        android:layout_marginTop="100dp" />


</LinearLayout>